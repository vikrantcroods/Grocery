<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme_NoactionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="large_text">
        <item name="android:font" tools:targetApi="o">@font/sarabunbold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="button_text">
        <item name="android:font" tools:targetApi="o">@font/sarabunregular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorDark</item>
    </style>

    <style name="tool_text">
        <item name="android:font" tools:targetApi="o">@font/sarabunregular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="order_text">
        <item name="android:font" tools:targetApi="o">@font/sarabunsemibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="order_detail_text">
        <item name="android:font" tools:targetApi="o">@font/sarabunsemibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorDarkLightText</item>
    </style>

    <style name="tab_text">
        <item name="android:font" tools:targetApi="o">@font/sarabunregular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="small_text_blue">
        <item name="android:font" tools:targetApi="o">@font/sarabunregular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlue</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorBlack</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textColorHint">@color/colorDark</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorControlActivated">@color/colorBlack</item>
    </style>

    <style name="LoginTextInputLayoutotp" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorDark</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorControlActivated">@color/colorBlack</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorYellow</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="tabGravity">center</item>
        <item name="tabTextAppearance">@style/tab_text</item>
    </style>

    <style name="radio_button_theme" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:colorControlNormal">@color/colorBlack</item>
        <item name="android:colorControlActivated">@color/colorBlack</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorBlack</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="regular_font_home">
        <item name="android:font" tools:targetApi="o">@font/sarabunregular</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorBlue</item>
        <item name="colorAccent">@color/colorBlue</item>
    </style>


</resources>
