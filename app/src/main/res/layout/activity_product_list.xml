<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ProductListActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_product"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorBlue">

        <TextView
                android:id="@+id/txt_tool_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sub-Category"
                style="@style/tool_text"/>
    </androidx.appcompat.widget.Toolbar>

    <TextView
            android:id="@+id/divider_subcategory"
            app:layout_constraintTop_toBottomOf="@+id/tool_product"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDark"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lst_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_subcategory"
            android:layout_marginTop="58dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/product_list_row">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>